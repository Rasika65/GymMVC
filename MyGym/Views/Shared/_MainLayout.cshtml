<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/Images/Gym_logo.jpg" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @*<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@800&display=swap" rel="stylesheet">*@
    <link href="~/Content/Site.css" rel="stylesheet" />  
    
</head>


<body>
    <header>
        <div class="col-md-12 col-sm-12 menu">            
                <div class="float-right">
                    <section id="login body">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
                <div class="float-right clear">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>            
                <div class="logo col-sm-12 col-md-12"> 
                    <img alt="" src="~/Images/Gym_logo.jpg" />
                    <p class="logo">Fitness</p>
                </div> 
                       
        </div>
    </header>

    <div id="body">
        <div class="container">
            @RenderSection("featured", required: false)
            <section class="">
                @RenderBody()
            </section>
        </div>
    </div>

    <footer>
        <div class="container">
            <div class="text-center footer">
                Developed By <a href="mailto:rasika.patil14@gmail.com">Rasika Patil</a>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
