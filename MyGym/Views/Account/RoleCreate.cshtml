@model MyGym.Models.Role

@{
    ViewBag.Title = "RoleCreate";
}


<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
<link href="~/Content/Site.css" rel="stylesheet" />


<div class="container">
    <div class="clearfix"></div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Create Role</legend>
            <div class="panel">
                <div class="panel-body">
                    <div>
                        @Html.ActionLink("Role List", "RoleIndex", "Account", new { @class = "btn btn-info btn-pressure" }) | @Html.ActionLink("Add Role to User", "AssignRoleToUser", "Account", new { @class = "btn btn-info btn-pressure" })
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.RoleName)
                        </div>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.RoleName)
                            @Html.ValidationMessageFor(model => model.RoleName)
                        </div>
                        <div class="col-md-3"></div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p>
                                <input type="submit" value="Create" class="btn btn-success" />
                            </p>
                        </div>
                    </div>
                </div>
        </fieldset>
    }
</div>
